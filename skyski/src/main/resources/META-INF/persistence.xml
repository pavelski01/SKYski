<?xml version="1.0" encoding="UTF-8"?>
<persistence 
	xmlns="http://java.sun.com/xml/ns/persistence" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" 
	version="2.0"
>
	<persistence-unit name="skyskiPu" transaction-type="JTA">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<jta-data-source>jdbc/postgresql</jta-data-source>
		<class>module.skyski.orm.Authors</class>
		<class>module.skyski.orm.Books</class>
		<class>module.skyski.orm.Currency</class>
		<class>module.skyski.orm.Merchandise</class>
		<class>module.skyski.orm.MerchandisePl</class>
		<class>module.skyski.orm.MerchandiseRu</class>
		<class>module.skyski.orm.Transactions</class>
		<class>module.skyski.orm.Client</class>
		<properties>
			<property name="eclipselink.target-database" value="PostgreSQL"/>
	    		<property name="eclipselink.jdbc.url" value="jdbc:postgresql://localhost:5432/skyski"/>
	    		<property name="eclipselink.jdbc.driver" value="org.postgresql.Driver"/>
	    		<property name="eclipselink.jdbc.user" value="postgres"/>
	    		<property name="eclipselink.jdbc.password" value="admin"/>
		</properties>
	</persistence-unit>
</persistence>
